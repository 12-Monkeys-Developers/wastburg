<div class="wastburg-dialog-roll-complex">
  <header class="dialog-header">
    {{#if img}}
    <img class="actor-icon" src="{{img}}" title="{{name}}" />
    {{/if}}
    <h2 class="dialog-title">{{title}}</h2>
  </header>

  <div class="dialog-body">

    <div class="form-group">
      <label>Trait (Bonus)</label>
      <select id="select-trait-bonus" name="selectedTraitBonus">
        <option value="none">Aucun</option>
        {{selectOptions traits selected=selectedTraitBonus valueAttr="id" labelAttr="name"}}
      </select>
    </div>

    <div class="form-group">
      <label>Trait (Malus)</label>
      <select id="select-trait-malus" name="selectedTraitMalus">
        <option value="none">Aucun</option>
        {{selectOptions traits selected=selectedTraitMalus valueAttr="id" labelAttr="name"}}
      </select>
    </div>

    <div class="form-group">
      <label>Contact</label>
      <select id="select-contact" name="selectedContact">
        <option value="none">Aucun</option>
        {{#each contacts as |contact|}}
        <option value="{{contact.id}}" {{#if (eq ../selectedContact contact.id)}}selected{{/if}}>
          {{contact.name}} ({{getLevel contact.system.value}})
        </option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label>Bonus/Malus</label>
      <select id="select-bonusmalus" name="selectedBonusMalus">
        {{selectOptions config.levelsList selected=selectedBonusMalus valueAttr="value" labelAttr="label"}}
      </select>
    </div>

    <div class="form-group checkbox-group">
      <label>
        <input type="checkbox" id="applySante" name="applySante" {{checked applySante}}/>
        <span>Appliquer la sant√© ( {{getLevel santeValue}} )</span>
      </label>
    </div>

    <div class="form-group checkbox-group">
      <label>
        <input type="checkbox" id="applyMental" name="applyMental" {{checked applyMental}}/>
        <span>Appliquer le mental ( {{getLevel mentalValue}} )</span>
      </label>
    </div>

    <div class="form-group checkbox-group">
      <label>
        <input type="checkbox" id="applySocial" name="applySocial" {{checked applySocial}}/>
        <span>Appliquer le social ( {{getLevel socialValue}} )</span>
      </label>
    </div>

    <div class="dialog-result">
      <strong>Niveau final : <span id="total-level">(0)</span></strong>
    </div>

  </div>

</div>