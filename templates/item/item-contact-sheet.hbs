<form class="{{cssClass}}" autocomplete="off">
  <body>
      <header class="sheet-header-contact">
        <img class="profile-img-contact" src="{{data.img}}" data-edit="img" title="{{data.name}}" />
        <div class="header-fields">
            <h1 class="charname">
                <input class="inputNameContact" name="name" type="text" value="{{data.name}}" placeholder="Name" />
            </h1>
        </div>
    </header>
<table class="tableContact">
  <thead>
    <tr>
      <th><label class="contact">Niveau</label></th>
      <th><label class="contact-quartier">Quartier</label></th>
      <th><label class="traitsPremier">Trait Premier</label></th>
      <th><label class="traitsSecond">Trait Second</label></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <select class="selectContact" name="system.value" data-dtype="String">
                            {{#select system.value}}
                              {{> systems/wastburg/templates/common/select-levels.hbs}}
                            {{/select}}
                          </select>  
                          </td>
      <td><input type="text" name="system.quartier" value="{{system.quartier}}" data-dtype="String" /></td>
      <td><input type="text" name="system.trait1" value="{{system.trait1}}" data-dtype="String" /></td>
      <td><input type="text" name="system.trait2" value="{{system.trait2}}" data-dtype="String" /></td>
    </tr>
  </tbody>
</table>
  <div class="editor-contact">
    <label class="description-contact">Description du contact:</label>
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>
  </body>
</form>
