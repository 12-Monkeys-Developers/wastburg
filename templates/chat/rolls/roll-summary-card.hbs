<div class="wastburg-chat-message">

  <!-- Actor name header -->
  <div class="chat-actor-header">
    <img class="chat-icon" src="{{actorImg}}" alt="{{actorName}}" />
    <h3 class="actor-name">{{actorName}}</h3>
  </div>

  <!-- Result quality banner -->
  <h2 class="{{cssQuality}} roll-quality">{{rollQuality}}</h2>

  {{#if description}}
    <div class="roll-description">{{description}}</div>
  {{/if}}

  <div class="actions-section">

    <!-- Modifiers details -->
    {{#if (or (ne selectedTraitBonus "none") (ne selectedTraitMalus "none") (ne selectedContact "none") selectedBonusMalus applySante applyMental applySocial)}}
    <div class="modifiers-section">
      <h4>Modificateurs appliqués</h4>
      <ul class="modifiers-list">
        {{#if (ne selectedTraitBonus "none")}}
        <li class="modifier-bonus"><i class="fas fa-plus-circle"></i> Trait Bonus : {{traitBonus.name}}</li>
        {{/if}}
        {{#if (ne selectedTraitMalus "none")}}
        <li class="modifier-malus"><i class="fas fa-minus-circle"></i> Trait Malus : {{traitMalus.name}}</li>
        {{/if}}
        {{#if (ne selectedContact "none")}}
        <li class="modifier-contact"><i class="fas fa-user"></i> Contact : {{contact.name}} {{levelText contact.system.value}}</li>
        {{/if}}
        {{#if selectedBonusMalus}}
        <li class="modifier-bonus-malus"><i class="fas fa-balance-scale"></i> Bonus/Malus : {{levelText selectedBonusMalus}}</li>
        {{/if}}
        {{#if applySante}}
        <li class="modifier-sante"><i class="fas fa-heart"></i> Santé : {{levelText santeValue}}</li>
        {{/if}}
        {{#if applyMental}}
        <li class="modifier-mental"><i class="fas fa-brain"></i> Mental : {{levelText mentalValue}}</li>
        {{/if}}
        {{#if applySocial}}
        <li class="modifier-social"><i class="fas fa-users"></i> Social : {{levelText socialValue}}</li>
        {{/if}}
      </ul>
    </div>
    {{/if}}

    <!-- Roll summary -->
    <div class="roll-summary">
      <div class="summary-item">
        <span class="label">Modificateur final :</span>
        <span class="value">{{levelText totalLevel}}</span>
      </div>
      <div class="summary-item dice-results">
        <span class="label">Dés :</span>
        <span class="dice-values">
          {{#each roll.terms.0.results as |result key|}}
          <span class="die-result">{{result.result}}</span>
          {{/each}}
        </span>
      </div>
    </div>

    <!-- Aubaine actions -->
    {{#if rollGM2}}
    {{else}}
      {{#if (eq rerollMode "aubaine-perso")}}
      <div class="reroll-notice success">✓ Augmenté grâce à une aubaine personnelle !</div>
      {{else}}
      {{#if (eq rerollMode "aubaine-groupe")}}
      <div class="reroll-notice success">✓ Relancé grâce à une aubaine de groupe !</div>
      {{else}}
      {{#if (eq rerollMode "anciennete")}}
      <div class="reroll-notice success">✓ Relancé grâce à 1 Point d'Ancienneté !</div>
      {{else}}
      <div id={{aubaineButtonId}} class="aubaine-actions">
        {{#if aubainesPerso}}
        <button class="chat-card-button apply-aubaine-perso" data-tooltip="Augmenter de +1 avec 1 aubaine personnelle">
          <i class="fas fa-plus"></i> +1 (1 Aubaine perso, reste {{aubainesPerso}})
        </button>
        {{/if}}
        {{#if anciennete}}
        <button class="chat-card-button apply-anciennete" data-tooltip="Relancer avec 1 Point d'Ancienneté">
          <i class="fas fa-redo"></i> 1 P. d'Ancienneté, reste {{anciennete}}
        </button>
        {{/if}}
        {{#if aubainesDeGroupe}}
        <button class="chat-card-button apply-aubaine-groupe" data-tooltip="Relancer avec 1 aubaine de groupe">
          <i class="fas fa-redo"></i> 1 Aubaine de groupe, reste {{aubainesDeGroupe}}
        </button>
        {{/if}}
        {{#if nbOne}}
        <div class="aubaine-reward">
          <div class="reward-notice">Vous pouvez récupérer {{nbOne}} aubaine(s) !</div>
          {{#if (ne selectedTrait "none")}}
          <button class="chat-card-button receive-aubaine-perso">
            <i class="fas fa-gift"></i> Recevoir une aubaine perso
          </button>
          {{/if}}
          <button class="chat-card-button receive-aubaine-groupe">
            <i class="fas fa-gift"></i> Recevoir une aubaine de groupe
          </button>
        </div>
        {{/if}}
      </div>
      {{/if}}
      {{/if}}
      {{/if}}
    {{/if}}

  </div>

  <!-- Final result -->
  <h2 class="{{cssQuality}} roll-quality result-final"><strong>Résultat : {{result}}</strong></h2>

</div>