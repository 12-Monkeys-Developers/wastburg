<section class="{{cssClass}} sheet-form-layout" autocomplete="off">
  <header class="sheet-header">
    <div class="header-content">
      <img class="profile-img" src="{{actor.img}}" data-action="editImage" title="{{actor.name}}" />

      <div class="header-info">
        <h1><input name="name" type="text" value="{{actor.name}}" placeholder="Nom du Gourbi" /></h1>

        <div class="gourbi-controls">
          <div class="form-group-inline">
            <label>Emplacement</label>
            <input type="text" name="system.emplacement" value="{{actor.system.emplacement}}" placeholder="Localisation" />
          </div>

          <div class="form-group-inline">
            <label>Gelder</label>
            <div class="gelder-controls">
              <button type="button" data-action="gelderMinus" title="Diminuer">
                <i class="fas fa-minus"></i>
              </button>
              <input type="number" name="system.gelder.value" value="{{actor.system.gelder.value}}" />
              <button type="button" data-action="gelderPlus" title="Augmenter">
                <i class="fas fa-plus"></i>
              </button>
            </div>
          </div>
        </div>
      </div>

    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item{{#if (eq activeTab 'description')}} active{{/if}}" data-action="changeTab" data-tab="description">Description</a>
    <a class="item{{#if (eq activeTab 'notes')}} active{{/if}}" data-action="changeTab" data-tab="notes">Notes</a>
  </nav>

  <section class="sheet-body">
    {{!-- Description Tab --}}
    <div class="tab{{#if (eq activeTab 'description')}} active{{/if}}" data-tab="description">
      <div class="question-section">
        <h3>Description du Gourbi</h3>
        <textarea name="system.biography" rows="10">{{actor.system.biography}}</textarea>
      </div>

      <div class="question-section">
        <h3>Mat√©riel disponible</h3>
        <textarea name="system.materiel" rows="5">{{actor.system.materiel}}</textarea>
      </div>

      <div class="question-section">
        <h3>Armes</h3>
        <textarea name="system.arme" rows="5">{{actor.system.arme}}</textarea>
      </div>

      <div class="question-section">
        <h3>Protections</h3>
        <textarea name="system.protection" rows="5">{{actor.system.protection}}</textarea>
      </div>
    </div>

    {{!-- Notes Tab --}}
    <div class="tab{{#if (eq activeTab 'notes')}} active{{/if}}" data-tab="notes">
      <div class="question-section">
        <h3>Notes</h3>
        <textarea name="system.note" rows="15">{{actor.system.note}}</textarea>
      </div>
    </div>
  </section>
</section>
